{
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"],
  "references": [],
  "compilerOptions": {
    // Enable workspace support:
    "composite": true,

    // Build output:
    "outDir": "dist",
    "rootDir": "src",

    // Build targets and artifacts:
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "declaration": true,

    // Build features:
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  }
}
