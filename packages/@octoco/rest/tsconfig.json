{
  // All source files for language server support:
  "include": ["src/**/*.ts"],

  "compilerOptions": {
    // Build output:
    "outDir": "dist",
    "rootDir": "src",

    // Build targets and artifacts:
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "declaration": true,

    // Build features:
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  }
}
